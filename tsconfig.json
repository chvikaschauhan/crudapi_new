{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": false,
        "target": "es6",
        "lib": ["es5","es2015.core"],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "baseUrl": ".",
        "paths": {
            "*": [
               
                "src/types/*"
            ]
        }
        
       
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
        
        ]
}